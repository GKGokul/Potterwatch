<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.gk.potterwatch.TestActivity">


    <TextView
        android:id="@+id/PoisonTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="48dp"
        android:text="Pick your Poison"
        android:textAlignment="center"
        android:textSize="32dp" />

    <Button
        android:id="@+id/pvpbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/PoisonTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:text="Online PvP" />

    <Button
        android:id="@+id/lanparty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pvpbutton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:text="LAN Party" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lanparty"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:text="Training" />
</RelativeLayout>
